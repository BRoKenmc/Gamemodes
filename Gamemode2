package me.BRoKenmc.Gamemodes;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.GameMode;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;

/**
 * Created by x on 21/2/2017.
 */
public class Gamemode2 implements CommandExecutor {

    @Override
    public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {

        if (label.equalsIgnoreCase("g2")) {
            if (!(sender instanceof Player)) {
                sender.sendMessage(ChatColor.RED+"Only player can execute this command!");
                return true;
            }

            Player player = (Player) sender;

            if(args.length == 0) {
                player.sendMessage (ChatColor.GREEN+"Your gamemode has been upgraded to adventure mode");
                player.setGameMode(GameMode.ADVENTURE);
            } else {
                Player target = Bukkit.getPlayer(args[0]);

                if (target == null) {
                    player.sendMessage(ChatColor.RED+args[0] +" is not online!");
                    return true;
                }

                target.setGameMode(GameMode.ADVENTURE);
                player.sendMessage(ChatColor.GREEN+"Successfully change "+target.getName()+" gamemode!");
                target.sendMessage(ChatColor.GREEN+"Your gamemode was changed by "+player.getName()+" to adventure mode!");

            }
        }


        return true;
    }

}
